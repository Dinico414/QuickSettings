<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="XenonBottomSheetDialogTheme">
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:colorBackground">@android:color/transparent</item>
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowCloseOnTouchOutside">true</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
    <item name="android:windowContentOverlay">@null</item>
</style>

    <style name="XenonQuickSettingsIcons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">@color/quicksettings_card_text</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:paddingHorizontal">10dp</item>
    </style>

    <style name="XenonQuickSettingsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/quicksettings_card_text</item>
    </style>

    <style name="XenonQuickSettingsCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/quicksettings_card_background</item>
        <item name="android:background">@drawable/tile_quicksetting</item>
        <item name="android:clickable">true</item>
        <item name="android:clipToOutline">true</item>
        <item name="android:focusable">true</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">0dp</item>
        <item name="layout_constraintHorizontal_weight">0.5</item>
        <item name="layout_constraintVertical_weight">0.5</item>
    </style>
</resources>